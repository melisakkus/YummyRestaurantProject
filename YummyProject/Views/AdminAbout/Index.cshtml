@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Hakkımda İşlemleri</h2>
<br />

<table class="table table-hover">

    <tr>
        <th>Resim 1</th>
        <th>Resim 2</th>
        <th>İtem 1</th>
        <th>İtem 2</th>
        <th>İtem 3</th>
        <th>Açıklama</th>
        <th>Video</th>
        <th>Telefon No:</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageUrl" style="width:50px;height:40px" /></td>
            <td><img src="@item.ImageUrl2" style="width:50px;height:40px" /></td>
            <td>@(item.Item1.Length > 20 ? item.Item1.Substring(0, 20) : item.Item1)</td>
            <td>@(item.Item2.Length > 20 ? item.Item2.Substring(0, 20) : item.Item2)</td>
            <td>@(item.Item3.Length > 20 ? item.Item3.Substring(0, 20) : item.Item3)</td>
            <td>@(item.Description.Length > 30 ? item.Description.Substring(0, 30) : item.Description)</td>

            @if (string.IsNullOrEmpty(item.VideoUrl))
            {
                <td><a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-warning">Yok</a></td>
            }
            else
            {
                <td><button class="btn btn-outline-warning">Var</button></td>
            }

            <td>@item.PhoneNumber</td>
            <td><a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<div class="text-center">
    <a href="/AdminAbout/AddAbout/" class="btn btn-success">Yeni Hakkımda Alanı Ekle</a>
</div>


