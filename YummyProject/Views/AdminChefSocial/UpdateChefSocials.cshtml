@model YummyProject.Models.ChefSocial
@{
    ViewBag.Title = "UpdateChefSocials";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Şef Sosyal Medya Güncelleme Sayfası</h2>
<br />

<form method="post" class="form-control">

    @Html.HiddenFor(x => x.ChefSocialId)

    <label><strong>Şef</strong></label>
    @Html.TextBoxFor(x => x.Chef.NameSurname, new { @class = "form-control" })
    <br />

    <label><strong>Bağlantı</strong></label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />
    <label><strong>İkon</strong></label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label><strong>Site İsmi</strong></label>
    @Html.TextBoxFor(x => x.SocialMediaName, new { @class = "form-control" })
    <br />

    <div class="text-center">
        <button class="btn btn-warning">Güncelle</button>
    </div>
    <br />

</form>
